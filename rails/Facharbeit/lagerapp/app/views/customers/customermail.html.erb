<table class="table table-striped">
  <thead>
    <div class="row">
    <tr>
    
      <th>Anrede</th>
      <th>Vorname</th>
      <th>Nachname</th>
      <th>E-Mail</th>
      <th>Datenschutzerklärung</th>
      
    </tr>
