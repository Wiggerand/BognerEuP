  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.dear %></td>
      <td><%= customer.firstname %></td>
      <td><%= customer.lastname %></td>
      <td><%= customer.email %></td>
      <td><%= db(customer.privacypolicy) %></td>     <!--helper true/Liegt vor/ flase/Liegt nicht vor-->
