<%= form_for(@event) do |f| %>
<% if @event.errors.any? %>
		<div class="panel">
			<h2>Der Datensatz <%= @event.class.name.titleize.downcase %> konnte nicht gespeichert werden</h2>
			<p>Korrigieren Sie bitte 
			<% if @event.errors.count == 1 %>
				<%= "den" %>
				<% else %>
				<%= "die" %>
				<% end  %>
			<%= @event.errors.count %>
			Fehler.
			<p>
				<ul>
					<% @event.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</p>
</div>
<% end %>
	
	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :price %>
		<%= f.number_field :price %>
	</p>
	<p>
		<%= f.label :start_date %>
		<%= f.datetime_select :start_date %>
	</p>
	<p>
		<%= f.submit :Abschicken, :class => "button success"%>
		
	</p>
<% end %>